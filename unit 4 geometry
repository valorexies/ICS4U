import geometry

def main():
    shape = input("Select a rectangular prism or cylinder: ")
    if shape == "rectangular prism":
        l = int(input("Input the length: "))
        w = int(input("Input the width: "))
        h = int(input("Input the height: "))
        volume = geometry.volume_rectangular_prism
        surface_area = geometry.surface_area_rectangular_prism
        print("Your rectangular prism's volume is", volume)
        print("Your rectangular prism's surface area is", surface_area)

    elif shape == "cylinder":
        r = int(input("Input the radius: "))
        h = int(input("Input the height: "))
        geometry.volume_cylinder
        geometry.surface_area_cylinder
    else:
        print("Please input a valid answer")

main()
